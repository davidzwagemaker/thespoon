<form action="/restaurants" method="get">
  <input type="text" name="food_type" placeholder="What kind of food?">
  <input type="submit">
</form>



<h1>List of restaurants</h1>
<ul>
  <% @restaurants.each do |id, restaurant| %>
    <li><%= restaurant[:name] %> (<%= restaurant[:address] %>)</li>
  <% end %>
</ul>


